{
  "name": "nestjs-restapi-skeleton",
  "version": "0.0.1",
  "description": "Nest.js REST API skeleton",
  "author": "Fabio Silva | @imfsilva",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "yarn prebuild && yarn build && yarn pm2:prod",
    "pm2:prod": "pm2 start ecosystem.json --no-daemon --env production",
    "seed:config": "yarn typeorm-seeding config",
    "seed:run": "yarn typeorm-seeding seed",
    "seed:dev": "NODE_ENV=development yarn seed:run",
    "seed:stag": "NODE_ENV=staging yarn seed:run",
    "seed:prod": "NODE_ENV=production yarn seed:run",
    "schema:drop:dev": "NODE_ENV=development yarn typeorm schema:drop",
    "schema:sync:dev": "NODE_ENV=development yarn typeorm schema:sync",
    "schema:drop:stag": "NODE_ENV=staging yarn typeorm schema:drop",
    "schema:sync:stag": "NODE_ENV=staging yarn typeorm schema:sync",
    "schema:sync:prod": "NODE_ENV=production yarn typeorm schema:sync",
    "migration:create": "yarn typeorm migration:create -n",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=test jest --runInBand --collectCoverage",
    "test:e2e": "NODE_ENV=test jest --runInBand --config ./tests/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js --config src/database/ormconfig.ts",
    "typeorm-seeding": "ts-node ./node_modules/typeorm-seeding/dist/cli.js --root ./src/database --configName ormconfig.ts"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.6.1",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.0.0",
    "@nestjs/cqrs": "^8.0.1",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^8.1.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/throttler": "^2.0.0",
    "@nestjs/typeorm": "^8.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.0",
    "express-ctx": "^0.1.1",
    "minio": "^7.0.26",
    "nest-winston": "^1.6.2",
    "nestjs-i18n": "^8.2.2",
    "nestjs-minio": "^2.1.13",
    "nodemailer": "^6.7.2",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.1",
    "pm2": "^5.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.41",
    "winston": "^3.5.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0-alpha.5",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/compression": "^1.7.2",
    "@types/crypto-js": "^4.1.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/minio": "^7.0.12",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "jest-mock": "^27.5.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typeorm-seeding": "^1.6.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
